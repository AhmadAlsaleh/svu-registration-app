<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterData.UniversityDataFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/dialog_padding"
            android:paddingLeft="@dimen/dialog_padding"
            android:paddingRight="@dimen/dialog_padding"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qualifications"
                android:layout_marginTop="@dimen/dialog_padding"
                android:layout_marginBottom="@dimen/dialog_padding"
                android:textSize="@dimen/dialog_title" />

            <EditText
                android:id="@+id/certificateET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Certificate"
                android:inputType="textPersonName"
                android:layout_marginTop="@dimen/dialog_padding"
                android:textSize="@dimen/dialog_text"/>

            <EditText
                android:id="@+id/certificateDateET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Certificate Date"
                android:inputType="date"
                android:layout_marginTop="@dimen/dialog_padding"
                android:textSize="@dimen/dialog_text"/>

            <EditText
                android:id="@+id/certificateDegreeET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Degree"
                android:inputType="numberDecimal"
                android:layout_marginTop="@dimen/dialog_padding"
                android:textSize="@dimen/dialog_text"/>


            <EditText
                android:id="@+id/certificateEnglishET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="English Degree"
                android:inputType="numberDecimal"
                android:layout_marginTop="@dimen/dialog_padding"
                android:textSize="@dimen/dialog_text"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>